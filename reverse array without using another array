#include <iostream>
using namespace std;
int main(){
	int n;
	cout<<"enter the num of valus in array: ";
	cin>>  n;
	int a[n];
	cout<<"enter the values":
		for(int i=0;i<n;i++){
			cin>>a[i];
		}
		for(int i=0;i=n/2;i++){
			int t = a[i];
			a[i]=a[n-i-1];
			a[n-i-1]=t;
		}
		cout<<"reversed array: ";
		for(int i=0;i<n;i++){
			cout<<a[i]<<"";
		}
		cout<<endl;
		
		return 0;

}
